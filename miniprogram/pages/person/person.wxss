.info{
  width: 80%;
  background-color: rgb(100, 144, 233);
  display: flex;
  border-radius: 10rpx;
  /* 上下不给他高度，左右自适应，就会做到一个居中的效果 */
  margin: 0 auto;
  padding: 50rpx 40rpx;
  align-items: center;
}
.info .avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.info .name{
  display: flex;
  flex-direction: column;
  color: #fff;
  margin-left: 40rpx;
}
.info .name text:nth-child(2){
  margin-top: 25rpx;
}
.info .into{
  width: 50rpx;
  height: 50rpx;
  /* 这里为什么用auto？是因为如果给具体值的话，
  万一用户名字特别长，箭头就被顶出去了 */
  margin-left: auto;
}

/* 单元条 */
.cell{
  display: flex;
  width: 90% !important;
  background-color: #fff;
  margin:0 auto;
  /* 左右排列 */
  justify-content:space-between;
  /* 水平居中 */
  align-items: center;
  padding: 20rpx 40rpx;
  margin-top: 6rpx;
  font-weight: 400;
}
.cell .cellLeft{
  display: flex;
  align-items: center;
}
.cell .cellLeft image{
  width: 50rpx;
  height: 50rpx;
}
.cell .cellLeft text{
  margin-left: 30rpx;
}
.cell .cellRight{
  color: #c1c1c1;
}

/* 添加客服微信 */
.customerService .tips{
  background-image: linear-gradient(#1067D1,rgb(100, 144, 233));
  width: 80%;
  padding: 20rpx 40rpx;
  color: white;
  margin: 0 auto;
  font-size: 28rpx;
  text-align: center;
}
/* 添加两个类目只需要加个空格 */
.mt{
  margin-top: 25rpx;
}

/* 版本 */
.version{
  color: #a1a1a1;
  width: 100%;
  text-align: center;
}