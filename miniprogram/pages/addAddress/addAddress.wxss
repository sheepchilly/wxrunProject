page{
  background-color: #fff;
}
.body{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.body .body_item{
  display: flex;
  /* 水平方向的排列方式：space-between一左一右 */
  justify-content:space-between;
  align-items: center;
  width: 90%;
  padding:30rpx 0;
  border-bottom: 2rpx solid #d1d1d1;
}
.body .body_item .left{
  display: flex;
  /* 为什么上面写了align-items：center，这里还要写？因为一个是外层的，一个是内层的 */
  align-items: center;
}
.body .body_item image{
  width: 50rpx;
  height: 50rpx;
}
.body .body_item .right{
  color: #a1a1a1;
}
.body .body_item .right input{
  text-align: right;
}
.body .default{
  width: 90%;
  display: flex;
  /* 靠右 */
  justify-content: flex-end; 
  /* 居中 */
  align-items: center;
  padding: 20rpx 0;
}
/* 更换switch颜色 */
/* .wx-switch-input{
  background: #1067D1 !important;
