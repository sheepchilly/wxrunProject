.body .default text{
  color: #a1a1a1;
  margin-right: 30rpx;
}
.body .saveBtn{
  width: 85%;
  background-color: #1067D1;
  color: #fff;
  padding: 20rpx 0;
  border-radius: 40rpx;
  margin-top: 70rpx;
  font-weight: 400;
}
.body .showTip{
  margin-top: 30rpx;
}