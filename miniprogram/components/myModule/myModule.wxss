.modal{
  background-color: #fff;
  box-shadow: 0 0 5rpx 5rpx #d1d1d1;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  display: flex;
  flex-direction: column;
  min-height: 400rpx;
  width: 540rpx;
  padding: 20rpx 30rpx 30rpx;
  /* 加上层级，让他在最顶部显示 */
  z-index: 888;
}
.modal .top{
  display: flex;
  justify-content: space-between;
}
.modal .content{
  margin: 40rpx 30rpx 100rpx 30rpx;
  overflow: hidden;
  /* 文字换行 */
  word-wrap: break-word;
}
.modal .btn{
  display: flex;
  width: 90%;
  position: absolute;
  bottom: 40rpx;
}
.modal .btn .rightBtn{
  margin-left: 20rpx;
}